<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>IntelliSeats Dashboard</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      padding: 20px;
      background: #f5f5f5;
    }
    h2 {
      color: #2c3e50;
    }
    .lab-info, .sensor-data {
      margin-bottom: 20px;
      padding: 15px;
      border-radius: 8px;
      background: #fff;
      box-shadow: 0 2px 6px rgba(0,0,0,0.1);
    }
    .seats-container {
      display: flex;
      flex-wrap: wrap;
      gap: 15px;
    }
    .seat {
      width: 120px;
      padding: 10px;
      border-radius: 8px;
      background: #e0e0e0;
      text-align: center;
    }
    .occupied {
      background: #ff6b6b;
      color: white;
    }
    .vacant {
      background: #6bcf6b;
      color: white;
    }
  </style>
</head>
<body>

  <h2>IntelliSeats Live Dashboard</h2>

  <div class="lab-info" id="labInfo">
    Loading lab data...
  </div>

  <div class="sensor-data" id="sensorData">
    Loading sensor info...
  </div>

  <div class="seats-container" id="seatsContainer">
    Loading seats...
  </div>

  <script>
    const API_URL = "https://your-api-id.execute-api.region.amazonaws.com/dev/data"; // replace with your API Gateway endpoint

    async function fetchData() {
      try {
        const response = await fetch(API_URL);
        const data = await response.json();

        // Display Lab Info
        document.getElementById("labInfo").innerHTML = `
          <strong>Lab ID:</strong> ${data.lab_id} <br>
          <strong>Occupancy:</strong> ${data.occupancy}/7
        `;

        // Display Sensor Info
        document.getElementById("sensorData").innerHTML = `
          <strong>Noise Level:</strong> ${data.noise_level} dB <br>
          <strong>Sensor Health:</strong> ${data.sensor_health}
        `;

        // Display Seats
        const seatsHTML = data.seats.map(seat => {
          const cls = seat.status === "occupied" ? "seat occupied" : "seat vacant";
          return `
            <div class="${cls}">
              <strong>${seat.seat_id}</strong><br>
              ${seat.status === "occupied" ? `
                <small>${seat.user}</small><br>
                <small>${seat.time}</small>
              ` : `<small>Vacant</small>`}
            </div>
          `;
        }).join("");

        document.getElementById("seatsContainer").innerHTML = seatsHTML;

      } catch (err) {
        console.error("Error fetching data:", err);
        document.getElementById("labInfo").innerHTML = "Failed to load data.";
      }
    }

    fetchData();
    setInterval(fetchData, 10000); // auto-refresh every 10 sec
  </script>

</body>
</html>
